<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
android:background="@android:color/holo_green_light">

    <EditText
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_et_register"
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Username"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="271dp"
            android:layout_alignParentTop="true" android:layout_centerVertical="true" android:inputType=""/>
    <EditText
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@id/etUsername"
            android:background="@drawable/rounded_et_register"
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            tools:ignore="MissingConstraints" android:layout_marginTop="29dp"/>
    <EditText
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@id/etEmail"
            android:background="@drawable/rounded_et_register"
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            tools:ignore="MissingConstraints" android:layout_marginTop="29dp"/>
    <Button
            android:layout_marginStart="32dp"
            android:layout_marginEnd="30dp"
            android:textSize="16sp"
            android:layout_below="@id/etPassword"
            android:text="Register"
            android:background="@drawable/rounded_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Register"
            android:layout_marginTop="26dp"
            android:layout_marginRight="30dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginLeft="32dp"/>
    <TextView

            android:background="@android:color/white"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="Already have an account"
            android:layout_below="@id/Register"
            android:id="@+id/Alreadyaccount"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginRight="71dp"
            android:layout_marginLeft="35dp" android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginEnd="71dp"/>

    <Button
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text="SELECT PHOTO"
            android:id="@+id/selectphoto_button_register"
            android:layout_marginEnd="109dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_select_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="109dp"
            android:layout_marginLeft="8dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="4dp"
            android:id="@+id/selectphoto_imageview_register"
            android:layout_width="150dp"
            android:layout_height="150dp" android:layout_marginBottom="-2dp"
            android:layout_alignBottom="@+id/selectphoto_button_register"
            android:layout_alignRight="@+id/selectphoto_button_register" android:layout_marginRight="-2dp"
            android:layout_marginEnd="-2dp" android:layout_alignEnd="@+id/selectphoto_button_register"/>
</RelativeLayout>